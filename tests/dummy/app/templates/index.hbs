<h1>ember-sticky-element</h1>

<div class="demo row">
  <div class="col small">
    <StickyElement @class="sticky" as |sticky|>

      <p>small, not sticky to bottom</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col small bottom">
    <StickyElement @class="sticky" @bottom={{0}} as |sticky|>

      <p>small, sticky to bottom</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col small bottom">
    <StickyElement @top={{50}} @class="sticky" @bottom={{0}} as |sticky|>

      <p>small, sticky to bottom, with offset</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col large">
    <StickyElement @class="sticky" as |sticky|>

      <p>large, not sticky to bottom</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col large bottom">
    <StickyElement @class="sticky" @bottom={{0}} as |sticky|>
      
      <p>large, sticky to bottom</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col small off">
    <StickyElement @class="sticky" as |sticky|>

      <p>small, not sticky to bottom, off view</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col small bottom off">
    <StickyElement @class="sticky" @bottom={{0}} as |sticky|>

      <p>small, sticky to bottom, off view</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col small bottom off">
    <StickyElement @top={{50}} @class="sticky" @bottom={{0}} as |sticky|>

      <p>small, sticky to bottom, with offset, off view</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col large off">
    <StickyElement @class="sticky" as |sticky|>

      <p>large, not sticky to bottom, off view</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col large bottom off">
    <StickyElement @class="sticky" @bottom={{0}} as |sticky|>

      <p>large, sticky to bottom, off view</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

  <div class="col xsmall bottom">
    <StickyElement @class="sticky" @bottom={{0}} as |sticky|>

      <p>xsmall, sticky to bottom</p>
      <p class="debug">
        {{sticky-debug sticky}}
      </p>
    </StickyElement>
  </div>

</div>

